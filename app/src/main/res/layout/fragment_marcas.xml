<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.axel.afinal.MarcasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:text="Marcas Optenidas"
            android:textColor="#ff00"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/deporte" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:text="Prueba"
                    android:textColor="#ff00"
                    android:textSize="30dp" />

                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:paddingBottom="2dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="100"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:paddingBottom="2dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="200"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_dark"
                    android:paddingBottom="1dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="300"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView


                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_dark"
                    android:paddingBottom="1dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="400"
                    android:textColor="#FFF"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@android:drawable/ic_menu_recent_history"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="Marca"
                    android:textColor="#ff00"
                    android:textSize="30dp" />

                <TextView

                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="9.58"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:paddingLeft="30dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="30dp"
                    android:text="19.19"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:paddingLeft="30dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="30dp"
                    android:text="31.48"
                    android:textColor="#FFF"
                    android:textSize="30dp" />

                <TextView


                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:paddingLeft="30dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="30dp"
                    android:text="43.18"
                    android:textColor="#FFF"
                    android:textSize="30dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Fecha"
                    android:textColor="#ff00"
                    android:textSize="30dp" />

                <TextView

                    android:id="@+id/fecha"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp"
                    android:text="15/10/2016"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView

                    android:id="@+id/fecha2"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp"
                    android:text="15/10/2016"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView

                    android:id="@+id/fecha3"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp"
                    android:text="15/10/2016"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView

                    android:id="@+id/fecha4"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="7dp"
                    android:text="20/10/2016"
                    android:textColor="#FFF"
                    android:textSize="15dp" />



            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="Agregar"
            android:textColor="#ffff" />


    </LinearLayout>


</FrameLayout>
